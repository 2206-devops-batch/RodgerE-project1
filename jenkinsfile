pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/2206-devops-batch/RodgerE-project1'

                // Run venv.
                sh "python3 -m venv .venv"
                sh '. .venv/bin/activate'
                //run pip install
                sh 'pip install -r requirements-dev.txt'
            }
        }
        stage('Test'){
            //run pytest
            steps{
                sh 'python3 -m pytest app-test.py'
            }
        }

        // stage('Deployment'){
        //     steps{
        //         sh 'cd RodgerE-project1'
        //         sh 'git pull'
        //         sh 'docker-compose up -d'
        //     }
        // }

        stage ('Deploy') {
            steps{
                sshagent(credentials : ['proj1ID']) {
                    sh 'ssh -o StrictHostKeyChecking=no ubuntu@ec2-18-188-58-203.us-east-2.compute.amazonaws.com uptime'
                    sh 'ssh ubuntu@ec2-18-188-58-203.us-east-2.compute.amazonaws.com'
                    sh 'cd ~/RodgerE-project1'
                    sh 'git pull'
                    sh 'docker-compose up -d'
                }
            }
        }

    }
}
