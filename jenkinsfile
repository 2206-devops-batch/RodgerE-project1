pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/2206-devops-batch/RodgerE-project1'

                // Run venv.
                sh "python3 -m venv .venv"
                sh '. .venv/bin/activate'
                //run pip install
                sh 'pip install -r requirements-dev.txt'
            }
        }
        stage('Test'){
            //run pytest
            steps{
                sh 'python3 -m pytest app-test.py'
            }
        }

        stage('Deployment'){
            steps{
                sh 'ssh -i "RevUbuntu.pem" ubuntu@ec2-3-21-37-166.us-east-2.compute.amazonaws.com'
                sh 'git clone https://github.com/2206-devops-batch/RodgerE-project1'
                sh 'docker-compose up -d'
            }
        }
    }
}
